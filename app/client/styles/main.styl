@import 'client/styles/*.import'
@import 'jeet'

@import s(basePath, main)
@import s(basePath, animate)
@import s(basePath, ironprogress)
@import s(basePath, input)
@import s(basePath, buttonSmall)
@import s(basePath, links)

body
  background blackBg

section
  background bgColor

pre
  pre()
  font-size .8em
  line-height 1em
  border-radius roundCorner
  background #282B2E
  color bgColor

h1
  small
    color lighten(brandColor, 30%)
    font-size .6em
    font-style italic

figure
  border-radius roundCorner
  border 1px solid textColor
  padding 1em

cpLinks(brandColor)

article:not([data-role='home'])
  center(maxSize)
  &:not([data-role='usage'])
    margin-top 3em
    animation fadeInDown .8s ease-in-out
